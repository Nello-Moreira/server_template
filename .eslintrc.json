{
	"env": {
		"es2021": true,
		"node": true,
		"jest": true
	},
	"extends": ["airbnb-base"],
	"parserOptions": {
		"ecmaVersion": 13,
		"sourceType": "module"
	},
	"rules": {
		"import/extensions": [
			"error",
			{
				"js": "ignorePackages"
			}
		],
		"indent": [2, "tab", { "SwitchCase": 1, "VariableDeclarator": 1 }],
		"no-tabs": 0,
		"comma-dangle": [
			"error",
			{
				"arrays": "always-multiline",
				"objects": "always-multiline",
				"imports": "always-multiline",
				"exports": "always-multiline",
				"functions": "never"
			}
		]
	}
}
